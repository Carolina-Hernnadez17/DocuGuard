@model IEnumerable<DocuGuard.Models.documentos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ruta_archivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fecha_subida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ruta_archivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_subida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.version)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_documento">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_documento">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_documento">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
